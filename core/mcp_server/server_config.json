{
    "math": {
        "command": "python",
        "args": [
            "/mnt/e/project/langgraph_mcp_agent/core/mcp_server/tools/math_tools.py"
        ],
        "transport": "stdio"
    },
    "weather": {
        "command": "python",
        "args": [
            "/mnt/e/project/langgraph_mcp_agent/core/mcp_server/tools/weather_tools.py"
        ],
        "transport": "stdio"
    },
    "amap": {
        "command": "python",
        "args": [
            "/mnt/e/project/langgraph_mcp_agent/core/mcp_server/tools/amap_tools.py"
        ],
        "transport": "stdio"
    },

    "arxiv-mcp-server": {
        "command": "uv",
        "args": [
            "tool",
            "run",
            "arxiv-mcp-server",
            "--storage-path",
            "/mnt/e/arxiv_paper"
        ],
        "transport": "stdio"
    },
    "time-mcp": {
        "command": "npx",
        "args": [
            "-y",
            "time-mcp"
        ],
        "transport": "stdio"
    },
    "firecrawl-mcp": {
        "command": "npx",
        "args": [
            "-y",
            "firecrawl-mcp"
        ],
        "env": {
            "FIRECRAWL_API_KEY": "your_firecrawl_api_key_here"
        },
        "transport": "stdio"
    }
}